                      <canvas id="canvas" width="5" height="5"></canvas>
                        <div class="container" id="infoContainer" style="margin-top:-8%">
                         <center><legend style="font-style: 30px;">Job Details</legend></center>
                           <div>
                              Company Name:
                                        <input type="text" ng-model="companyname" name="companyname" placeholder="company" class="form-control" >
                                 
                              </div><br>
                                <div>
                              Job Title:
                                        <input type="text" ng-model="jobtitle" name="JobTitle" placeholder="Job title" class="form-control" >
                                 
                              </div><br>
                           <div>
                              Description:
                               <textarea ng-model="description" name="JobDescription" placeholder="Description" class="form-control" ></textarea>
                                 
                              </div><br>
                              
                                 <div>
                              Skillset:
                                     <textarea ng-model="skillset" name="SkillSet" placeholder="Skillset" class="form-control" ></textarea>
                                 
                              </div><br>
                              
                             <div>
                              Keywords:
                                     <textarea ng-model="keyword" name="KeyWord" placeholder="Keywords" class="form-control" ></textarea>
                                 
                              </div><br>
                               
                               <div>
                              Location:
                                        <input type="text" ng-model="location" name="JobLocation" placeholder="location" class="form-control" >
                                 
                              </div><br>
                       
                                <span></span>
                                  <div>
                              Expiry date:
                                        <input type="date" name="ExpiryDate" ng-model="exdate" placeholder="" class="form-control" >
                                 
                              </div><br>
                                                           
                          
                        </div>
                        </div>
                
                            <div class="row" style="width:60%; float:right">
